{
  "appId": "com.glm.ai.config",
  "productName": "GLM AI Config",
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "files": [
    "build/**/*",
    "public/electron.js",
    "public/preload.js",
    {
      "from": "node_modules",
      "filter": [
        "**/*"
      ]
    }
  ],
  "extraMetadata": {
    "main": "public/electron.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "zip",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "requestedExecutionLevel": "asInvoker"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}",
    "unicode": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "GLM AI Config"
  },
  "publish": null,
  "compression": "normal"
}